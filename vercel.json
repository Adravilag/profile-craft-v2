{
  "buildCommand": "cd app/front-end && pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "app/front-end/dist",
  "installCommand": "echo 'skipping root install'",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://profile-craft-v2-backend.onrender.com/api",
    "VITE_BASE_PATH": "",
    "VITE_CLOUDINARY_CLOUD_NAME": "demo",
    "NODE_ENV": "production",
    "SKIP_ENV_VALIDATION": "true"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
