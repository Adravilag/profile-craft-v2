{
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "framework": "vite",
  "rootDirectory": "./app/front-end",
  "env": {
    "VITE_API_URL": "https://profile-craft-v2-backend.onrender.com/api",
    "VITE_BASE_PATH": "",
    "VITE_CLOUDINARY_CLOUD_NAME": "demo",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
