{
  "name": "@cv-maker/backend",
  "version": "1.0.1",
  "description": "Backend del CV Maker",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx server-mongodb.ts",
    "dev:mongodb": "tsx server-mongodb.ts",
    "build": "tsc --project tsconfig.server.json",
    "start": "node dist-server/server-clean.js",
    "start:mongodb": "node dist-server/server-mongodb.js",
    "start:local": "node dist-server/server-clean.js",
    "clean": "Remove-Item -Recurse -Force dist-server -ErrorAction SilentlyContinue",
    "rebuild": "npm run clean && npm run build",
    "type-check": "tsc --noEmit",
    "lint": "eslint ../../eslint.config.js . --ext .ts --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "dev:watch": "ts-node --watch server-clean.ts",
    "dev:mongodb:watch": "ts-node --watch server-mongodb.ts",
    "script:populate-about": "tsx scripts/populate-about-data.ts",
    "render:build": "cd ../.. && npm install && npm run setup:packages && cd apps/backend && npm run build",
    "render:start": "node dist-server/server-mongodb.js",
    "render:start:sqlite": "node dist-server/server-clean.js",
    "env:local": "powershell -ExecutionPolicy Bypass -File ./switch-env.ps1 local",
    "env:production": "powershell -ExecutionPolicy Bypass -File ./switch-env.ps1 production",
    "env:status": "echo \"Current NODE_ENV:\" && findstr NODE_ENV .env 2>nul || echo \"No .env file found\"",
    "deploy:render": "git push render main",
    "deploy:render:force": "git push render main --force"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.13",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "cloudinary": "^2.6.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.9.3"
  }
}
